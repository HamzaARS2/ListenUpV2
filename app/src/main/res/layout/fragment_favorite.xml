<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.FavoriteFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/audio_favorite_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emptyFavoriteTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="You don't have any favorite audio yet"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/audio_favorite_recyclerview"
        app:layout_constraintEnd_toEndOf="@+id/audio_favorite_recyclerview"
        app:layout_constraintStart_toStartOf="@+id/audio_favorite_recyclerview"
        app:layout_constraintTop_toTopOf="@+id/audio_favorite_recyclerview" />


</androidx.constraintlayout.widget.ConstraintLayout>